<% include ../includes/head.ejs %>
</head>

<body>
    <% include ../includes/navigation.ejs %>
    <div class="container">
        <form method="POST" action="/admin/<% if(editing){%>edit-product/<%= product._id %><%}else{%>add-product<%}%>">
            <div class="form-group">
                <label for="exampleInputTitle">Title</label>
                <input name="title" type="text" class="form-control" id="exampleInputTitle"
                    placeholder="Enter title of the product" value="<% if(editing){%><%= product.title %><%}%>"/>
            </div>
            <div class="form-group">
                <label for="exampleInputimageUrl">Image Url</label>
                <input name="imageUrl" type="text" class="form-control" id="exampleInputimageUrl"
                    placeholder="Enter imageUrl of the product" value="<% if(editing){%><%= product.imageUrl %><%}%>"/>
            </div>
            <div class="form-group">
                <label for="exampleInputprice">Price</label>
                <input name="price" type="number" class="form-control" id="exampleInputprice"
                    placeholder="Enter price of the product" value="<% if(editing){%><%= product.price %><%}%>"/>
            </div>
            <div class="form-group">
                <label for="exampleInputdescription">Description</label>
                <textarea name="description" rows="5" class="form-control"><% if(editing){%><%= product.description %><%}%></textarea>
            </div>
            <button type="submit" class="btn btn-primary"><% if(editing){%>Update Product <%}else{%>Add Product<%}%></button>
        </form>
    </div>
    <% include ../includes/end.ejs%>