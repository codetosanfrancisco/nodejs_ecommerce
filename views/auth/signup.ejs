<%- include("../includes/head.ejs")%>
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include("../includes/navigation.ejs")%>
    <div class="container">
        <% if(error){%>
            <div><%= error %></div>
        <%}%>
        <form action="/signup" method="POST">
            <input type="hidden" value="<%= token %>" name="_csrf" />
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : 'valid'%>" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Enter email" name="email" value="<%= oldInput.email %>">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : 'valid'%>" id="exampleInputPassword1" placeholder="Password"
                    name="password" value="<%= oldInput.password%>">
            </div>
            <div class="form-group">
                <label for="confirmpassword">Confirm Password</label>
                <input type="password" class="form-control <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : 'valid'%>" id="confirmpassword" placeholder="Confirm Password" name="confirmpassword" value="<%= oldInput.confirmpassword%>">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <%-include("../includes/end.ejs")%>